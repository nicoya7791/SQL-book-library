extends ../layout

block content 
    h1 Update Book 
    include errors
    form(action='/books/'+ book.id method='post' onsubmit="confirm('book Updated')") 
        include form
        p 
            input(type="submit" value="Update Book")
        p  
            a(class="button" href='/books') Cancel 
